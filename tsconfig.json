{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "lib": ["es6"],
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": false,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "removeComments": true
  },
  "include": ["src/**/*.ts", "test/format.test.ts"],
  "exclude": ["__test__", "dist", "node_modules", "**/*.test.ts"]
}